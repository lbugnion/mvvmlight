<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="MainBackgroundBrush"
                     Color="LightCoral" />
    
    <DataTemplate x:Key="DataTemplate1">
        <StackPanel>
            <TextBlock Text="{Binding Path=TextInItemVM}"
                       TextWrapping="Wrap" />
            <TextBlock Text="{Binding Path=Model.TextInItem}"
                       TextWrapping="Wrap" />
            <Rectangle Fill="#FF0044FF"
                       Height="2"
                       Width="100" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>